<link rel="stylesheet" href="/product-list.css">
<div class="container">

    <h1>products List</h1>

    <a href="/products/new" class="add-user-btn">Add product</a>

    <table>

        <tr>

            <th>Name</th>

            <th>price</th>

            <th>description</th>
            <th>Image</th>

            <th class="actions">Actions</th>

        </tr>
        <% products.forEach(p=>{%>

            <tr>

                <td> <%= p.name %></td>

                <td> <%= p.price %> <%if(p.price>20000){%>
                    <div class="condition">
                        <p><b>PREMIUM</b></p>
                    </div>
                    
                <%}%></td>

                <td> <%= p.description %></td>

                <td><img src="<%= p.imgpath %>"></td>

                <td class="actions">



                    <a href="/products/<%= p.id %>/edit">Edit</a>

                    <form action="/products/<%= p.id %>?_method=DELETE" method="post">

                        <button type="submit" class="delete-btn">Delete</button>

                    </form>

                </td>

            </tr>

        <%})%>

    </table>

</div>